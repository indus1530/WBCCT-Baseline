                        <TextView
                            style="@style/info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/dinstrc3" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- d101  Input   -->
